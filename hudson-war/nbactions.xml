<!--
Ensures that NetBeans knows which goals to run when Run Project is selected.
-->
<actions>
    <action>
        <actionName>run</actionName>
        <goals>
            <goal>hudson-dev:run</goal>
        </goals>
    </action>
    <action>
        <actionName>debug</actionName>
        <goals>
            <goal>hudson-dev:run</goal>
        </goals>
        <properties>
            <jpda.listen>maven</jpda.listen>
        </properties>
    </action>
</actions>
